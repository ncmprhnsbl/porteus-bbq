# Theme description
ThemeDescription="Ambiance Crunchy for IceWM"
# Theme author
ThemeAuthor="Benoit THIBAUD, frombenny@gmail.com"

# Look (warp3, warp4, win95; motif, nice, pixmap, metal, gtk)
Look=pixmap

# Task tray has a bevel around it (Like the Windows system tray)
TrayDrawBevel	=	1 	# 0 / 1

# List of gradient images in the current theme
Gradients	=	"menubg.xpm menusel.xpm menusep.xpm taskbarbg.xpm workspacebuttonactive.xpm"

# Change the titlebar buttons when mouse is over or not
RolloverButtonsSupported	=	1

# Titlebar buttons supported by theme (s=sysmenu, x=close, m=max, i=min, h=hide, r=rollup, d=depth)
TitleButtonsSupported	=	"sxmihrd"
TitleButtonsLeft		=	"xmi"
TitleButtonsRight		=	"srd"

# 'Start Menu' icon visible
#ShowMenuButtonIcon	=	1

# Horizontal:X and Vertical:Y window border
BorderSizeX	=	0	# 0-128
BorderSizeY	=	0	# 0-128

# Resize bottom right corner width:X and height:Y

# Horizontal:X and Vertical:Y dialog window border

# Icon sizes
MenuIconSize	=	16		# 0-128
SmallIconSize	=	16		# 8-128
LargeIconSize	=	32		# 8-128
HugeIconSize	=	48		# 8-128

TitleBarHeight			=	29
TitleBarJustify			=	51
TitleBarHorzOffset		=	5		# -128-128
TitleBarVertOffset		=	1
DesktopBackgroundColor	=	"#602f4c"

